                            <Frame.Triggers>
                                <DataTrigger Binding="{Binding Source={x:Reference DraggableViewCell}, Path=IsDragAndDropping}"
                                             TargetType="renderedViews:MaterialFrame"
                                             Value="True">
                                    <Setter Property="Elevation" Value="8" />
                                </DataTrigger>
                            </Frame.Triggers>

